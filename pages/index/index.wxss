/*列表样式  */
.listContainer{
  border-bottom:1rpx solid #f0f0f0;
  /* width:100%; */
  height:80rpx;
  display: flex;
  white-space: nowrap;
}
/*子列表项  */
.item{
  width:110rpx;
  text-align: center;
  height:100rpx;
  font-size:32rpx;
  display: inline-block;
  color:#ccc;
}
.itemFirst{
   width:80rpx;
  text-align: center;
  height:70rpx;
  font-size: 40rpx;
  display: inline-block;
  color:#ccc;
}
/*list active  */
.active{
  color:blue;
  height:100rpx;
  display:inline-block;
  border-bottom:5rpx solid blue; 
}
.productCartImage{
  color:blue;
  font-size: 32rpx;

}
/*product container  */
.procutContainer{
  width:750rpx;
  background: #fff;
  font-size:24rpx;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.productLeft{
  margin: 10rpx 5rpx;
  padding:0rpx;
  border:1rpx solid #ccc;
  width:352rpx;
  height: 100%;
  overflow: hidden;
  display: block;
}
.productImage image{
  width:100%;
  height:350rpx;
}
.productText{
  margin-top:15rpx;
  width:95%;
  margin-left: 15rpx;
}
.productCart{
  /* width:97%; */
  height:70rpx;
  overflow: hidden;
  line-height: 50rpx;
  margin-left: 15rpx;
  display: flex;
  justify-content: space-between;
}
.productCartLeft{
  color:blue;
}
.productCartRight{
    text-align: center;
    line-height: 45rpx;
  display: block;
  width:45rpx;
  height:45rpx;
  margin-right:22rpx;
  border-radius: 50%;
  margin-top:0rpx;
  border:2rpx solid #00f;
}
